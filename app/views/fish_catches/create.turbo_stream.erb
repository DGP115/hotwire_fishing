<%= turbo_stream.prepend "fish_catches_list" do %>
  <%= render partial: "fish_catches/fish_catch",
             locals: { fish_catch: @fish_catch } %>
<% end %>

<%= turbo_stream.replace "fish_catches_form" do %>
  <%= render partial: "fish_catches/form",
             locals: { fish_catch: @new_catch } %>
<% end %>

<%= turbo_stream.update "tackle_box_stats" do %>
  <%= render partial: "tackle_box_items/stats",
             locals: { fish_catches: @fish_catches } %>
<% end %>

<%= update_flash_messages %>

